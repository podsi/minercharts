<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{title}}</title>
    <script type='text/javascript' src='/vendor/javascripts/jquery-1.11.3.min.js'></script>
    <script type="text/javascript" src='/vendor/javascripts/highcharts/highcharts.js'></script>
    <script type="text/javascript" src='/vendor/javascripts/highcharts/modules/exporting.js'></script>
    <script type='text/javascript' src='/node_modules/handlebars/dist/handlebars.min.js'></script>
    <script type='text/javascript' src='/node_modules/bootstrap/dist/js/bootstrap.min.js'></script>
    <script type='text/javascript' src='/node_modules/lodash/index.js'></script>


    <script type="text/javascript" src="/javascripts/minercharts.js"></script>
    <script type="text/javascript" src="/javascripts/helper/util.js"></script>
    <script type="text/javascript" src="/javascripts/helper/settings.js"></script>
    <script type="text/javascript" src="/javascripts/helper/charts.js"></script>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/node_modules/bootstrap/dist/css/bootstrap.min.css' />
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <span class="navbar-brand"><a href="/">SubCat</a></span>
        </div>
        <div class="navbar-collapse collapse sidebar-navbar-collapse">
          <ul id="mc-main-nav" class="nav navbar-nav">
            <li class="{{ovactive}}"><a class="nav-link" nav-tab="overview" href="/">Overview</a></li>
            <li class="{{smactive}}"><a class="nav-link" nav-tab="sentiments" href="/sentiments">Sentiments</a></li>
            <li class="{{procmactive}}"><a class="nav-link" nav-tab="processmetrics" href="/processmetrics">Process metrics</a></li>
            <li class="{{prodmactive}}"><a class="nav-link" nav-tab="productmetrics" href="/productmetrics">Product metrics</a></li>
            <li class="{{upactive}}"><a class="nav-link" nav-tab="userprofiles" href="/userprofiles">User Profile</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container-fluid" style="margin-top: 20px !important;">
      <div class="row">
        <div id="message"></div>
      </div>
      {{!-- <div class="page-header">
        <h3>{{title}} <small>Minercharts powered by SubCats</small></h3>
      </div> --}}

      <div class="row">
        <div class="col-md-2 col-sm-3">

          {{!-- chosse user --}}
          <div class="row {{globalchooseuser}}">
            <div class="panel-group" id="settings-accordion" role="tablist" aria-multiselectable="true">
              <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingGlobal">
                  <h3 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#settings-accordion" href="#global-settings-user" aria-expanded="true" aria-controls="global-settings-user">
                      User
                    </a>
                  </h3>
                </div>
                <div id="global-settings-user" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingGlobal">
                  <div class="panel-body">
                    <form>

                      <div class="form-group form-group-sm">
                        <select name="users" class="form-control">
                            <option value="-1">Choose user ({{users.length}})</option>
                          {{#each users}}
                            <option value="{{iid}}" dict-context="{{icontext}}">{{iname}} ({{icontext}})</option>
                          {{/each}}
                        </select>
                      </div>

                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div id="globalSettings-panel">
            {{> global_settings}}
            </div>

            {{!-- <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Settings</h3>
              </div>
            </div> --}}

          </div>
        </div>

        <div class="col-md-10 col-sm-9">
          {{{body}}}
        </div>

      </div>
    </div>

    <script type="text/javascript">

      $(function( ) {
        MC.start( );
      } );

    </script>
  </body>
</html>
