<label for="categories" class="col-sm-2 control-label">Categories</label>
<div class="col-sm-10">
  <div class="checkbox">
    {{#each cats}}
      <label class="checkbox-inline">
        <input type="checkbox" name="{{name}}" value="{{id}}" checked="checked"> {{name}}
      </label>
    {{/each}}
  </div>
</div>